# ConvoAI Production Environment Configuration
# ============================================

# Application Info
APP_NAME=ConvoAI
APP_VERSION=1.0.0

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/convoai_production
DB_NAME=convoai_production

# Security Configuration (MUST CHANGE THESE!)
JWT_SECRET=your-production-jwt-secret-256-bit-key-change-this
SESSION_SECRET=your-production-session-secret-change-this-too

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Session Configuration
SESSION_MAX_AGE=3600000
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# External APIs
OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/convoai/app.log

# Redis Configuration (for session store in production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password